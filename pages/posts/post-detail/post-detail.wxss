.post-detail-container {
  display: flex;
  flex-direction: column;
}
.post-detail-container .head-image {
  width: 100%;
  height: 460rpx;
  position: relative;
}
.post-detail-container .audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
.post-detail-container .author-data {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.post-detail-container .author-data .author-avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.post-detail-container .author-data .author-name {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20px;
  vertical-align: middle;
  color: #666666;
}
.post-detail-container .author-data .const-text,
.post-detail-container .author-data .date {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
  vertical-align: middle;
}
.post-detail-container .title {
  margin-left: 40rpx;
  font-size: 30rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.post-detail-container .tool {
  margin-top: 20rpx;
}
.post-detail-container .tool .circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.post-detail-container .tool .circle-img image {
  width: 90rpx;
  height: 90rpx;
}
.post-detail-container .tool .circle-img .share-img {
  margin-left: 30rpx;
}
.post-detail-container .tool .horizon {
  width: 660rpx;
  height: 2px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.post-detail-container .detail {
  color: #666666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
